<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    android:background="@drawable/bg_meet_mohu"
    tools:context="cn.bmob.imdemo.ui.ChangeInfoActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#50000000"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_change_back"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="10dp"
            android:contentDescription="@string/img_nowarn"
            android:src="@drawable/back" />

        <TextView

            android:id="@+id/txt_title_change"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@color/BaseWhite"
            android:textSize="24sp" />

        <TextView
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="20dp"
            android:gravity="center"
            android:text="编辑"
            android:textColor="@color/BaseWhite"
            android:textSize="16sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/margin_16">

        <TextView
            android:textColor="@color/BaseWhite"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="昵称" />

        <EditText
            android:textColor="@color/BaseWhite"
            android:id="@+id/et_nickname_change"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:textColor="@color/BaseWhite"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="签名" />

        <EditText
            android:textColor="@color/BaseWhite"
            android:id="@+id/et_signname_change"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:textColor="@color/BaseWhite"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="性别" />

        <EditText
            android:textColor="@color/BaseWhite"
            android:id="@+id/et_sex_change"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:textColor="@color/BaseWhite"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="手机号" />

        <EditText
            android:textColor="@color/BaseWhite"
            android:id="@+id/et_phone_change"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:textColor="@color/BaseWhite"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="生日" />

        <EditText
            android:textColor="@color/BaseWhite"
            android:id="@+id/et_birthday_change"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

</LinearLayout>
