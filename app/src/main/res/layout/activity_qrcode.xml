<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_meet_mohu"
    android:fitsSystemWindows="true"
    tools:context="cn.bmob.imdemo.ui.QRcodeActivity"
    android:orientation="vertical">

    <include layout="@layout/include_navi" />
    <LinearLayout
        android:layout_marginTop="25dp"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/img_avatar_qrcode"
            android:contentDescription="@string/img_nowarn"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/girl"/>
        <LinearLayout
            android:layout_marginStart="@dimen/margin_20"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="60dp"
            android:orientation="vertical">
            <TextView
                android:textSize="24sp"
                android:textColor="@color/BaseWhite"
                android:id="@+id/txt_nickname_qrcode"
                android:maxLines="1"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="30dp" />
            <TextView
                android:textSize="16sp"
                android:textColor="@color/BaseWhite"
                android:id="@+id/txt_username_qrcode"
                android:maxLines="1"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="30dp" />
        </LinearLayout>
    </LinearLayout>
    <ImageView
        android:id="@+id/img_code_qrcode"
        android:contentDescription="@string/img_nowarn"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:layout_width="250dp"
        android:scaleType="fitXY"
        android:src="@drawable/qrcodetest"
        android:layout_height="250dp" />
    <TextView
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/qrcode_hibt"
        android:textColor="@color/NormalGray"/>
</LinearLayout>
