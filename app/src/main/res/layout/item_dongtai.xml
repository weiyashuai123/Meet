<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:paddingLeft="@dimen/margin_10"
    android:paddingRight="@dimen/margin_10"
    android:layout_height="wrap_content">
    <LinearLayout
        android:paddingTop="@dimen/margin_10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/avatar_dongtai_item"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/m"/>
        <TextView
            android:textColor="@color/BaseWhite"
            android:id="@+id/txt_nickname_dongtai_item"
            android:layout_marginStart="@dimen/margin_10"
            android:layout_marginEnd="@dimen/margin_10"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:textSize="16sp"
            android:text="魏亚帅"
            />
        <TextView
            android:textColor="@color/text_gray"
            android:id="@+id/txt_time_dongtai_item"
            android:text="今天 11：13"
            android:textSize="12sp"
            android:layout_marginStart="@dimen/margin_10"
            android:layout_marginEnd="@dimen/margin_20"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:gravity="center_vertical"/>
    </LinearLayout>
    <TextView
        android:layout_marginTop="@dimen/margin_10"
        android:text="123456"
        android:textSize="16sp"
        android:gravity="center_vertical"
        android:textColor="@color/BaseWhite"
        android:id="@+id/txt_contact_dongtai_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/margin_20"
        android:paddingBottom="@dimen/margin_20"/>
    <ImageView


        android:id="@+id/img_dongtai_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/text_gray"/>

</LinearLayout>